<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="android:Theme.Material.Light">
        <item name="android:colorAccent">@android:color/black</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="AppTheme">
        <item name="android:background">@android:color/black</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>

    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="AppTheme.ActionBarStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>



    <!--
       this color determines the color of the bar at the top of the app in
       the view that shows all running apps (square button)
       <item name="colorPrimary">@android:color/white</item>

       this color determines the color of the bar at the very top of the screen
       that displays time, phone charge, etc.
       <item name="colorPrimaryDark">@android:color/darker_gray</item>

       this color determines the color of the line underneath text-entry fields,
       etc
       <item name="colorAccent">@android:color/holo_green_dark</item>
       -->

</resources>
